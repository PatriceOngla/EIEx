<UserControl x:Class="UC_CommandesCRUD"
             Name="UC_CommandesCRUD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EIEx_App"
             mc:Ignorable="d" 
             d:DesignWidth="300" Background="{StaticResource FondBarreCommande}" 
             Template="{DynamicResource UC_CommandeCRUDTemplate}"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/EIEx_App;component/Code/Vue/Dico.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <ControlTemplate x:Key="UC_CommandeCRUDTemplate" TargetType="{x:Type UserControl}">
                <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True" Margin="0">
                    <ContentPresenter ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                </Border>
            </ControlTemplate>
            
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0">
        <Button x:Name="Btn_Ajouter" 
                ContentTemplate="{StaticResource Ajouter}" 
                Margin="4" Width="20" Height="20"
                ToolTip="{Binding ElementName=UC_CommandesCRUD, Path=TooltipAjout}"
                />
        <Button x:Name="Btn_Supprimer" 
                ContentTemplate="{StaticResource Annuler}" 
                Margin="4"  Width="20" Height="20"
                ToolTip="{Binding ElementName=UC_CommandesCRUD, Path=TooltipSuppression}"
                />

        <!--<Button 
                ContentTemplate="{StaticResource Suivant}" 
                Margin="4"  Width="20" Height="20"
                ToolTip="{Binding ElementName=UC_CommandesCRUD, Path=TooltipSuppression}"
                />-->


    </StackPanel>
</UserControl>
