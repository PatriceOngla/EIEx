<UserControl x:Class="UC_ExcelRangeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EIEx"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">
    <UserControl.Resources>
        <RelativeSource x:Key="ThisControl" 
                        Mode="FindAncestor" 
                        AncestorType="{x:Type local:UC_ExcelRangeSelector}"
                        AncestorLevel="1"/>
        
    </UserControl.Resources>
    <Grid>
        <DockPanel>
            <ToggleButton Content="..." DockPanel.Dock="Right" 
                          IsChecked="{Binding RelativeSource={StaticResource ThisControl}, FallbackValue= False, Path=EstActif}"/>
            <TextBox Text="{Binding RelativeSource={StaticResource ThisControl}, FallbackValue= ExcelRange, Path=XLRange}"/>
        </DockPanel>
    </Grid>
</UserControl>
